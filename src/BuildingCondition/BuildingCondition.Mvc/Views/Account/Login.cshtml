@model  BuildingCondition.Mvc.Models.ViewModels.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="mt-5 d-flex justify-content-center align-items-center text-center">
    <form asp-controller="Account" asp-action="Login" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
        <div class="form-group">
            <input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Log in</button>
    </form>
</section>

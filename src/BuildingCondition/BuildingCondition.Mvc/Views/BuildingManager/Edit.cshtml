@model BuildingCondition.Db.Models.BuildingManager

@{
    ViewData["Title"] = "Edit";
}

@await Html.PartialAsync("_LayoutHeader")

<section>
    <div class="row mx-1 my-1">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <p>Edit building manager</p>
                    <form asp-controller="BuildingManager" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@model BuildingCondition.Mvc.Models.ViewModels.BuildingManagerViewModels.BuildingManagerDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

@await Html.PartialAsync("_LayoutHeader")

<section>
    <h2 class="col">
            @Model.Name
        </h2>
    <div class="d-flex justify-content-end">
        <a asp-controller="Building" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-link text-success">
            <i class="fas fa-plus-square"></i>
        </a>
    </div>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Country</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">Street</th>
                <th scope="col">Building Number</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @{ var count = 0; }
            @foreach (var building in Model.Buildings)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@building.Country</td>
                    <td>@building.State</td>
                    <td>@building.City</td>
                    <td>@building.Street</td>
                    <td>@building.BuildingNumber</td>
                    <td>
                        <a asp-controller="Building" asp-action="Details" asp-route-id="@building.Id" class="btn btn-link text-info">
                            <i class="fas fa-info"></i>
                        </a>
                        <a asp-controller="Building" asp-action="Edit" asp-route-id="@building.Id" class="btn btn-link text-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-controller="Building" asp-action="Delete" asp-route-id="@building.Id" class="btn btn-link text-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
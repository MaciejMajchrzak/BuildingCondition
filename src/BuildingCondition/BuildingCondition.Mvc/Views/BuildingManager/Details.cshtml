@model BuildingCondition.Db.Models.BuildingManager

@{
    ViewData["Title"] = "Details";
}

@await Html.PartialAsync("_LayoutHeader")

<section>
    <div class="row mx-1 my-1">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p>@Model.Name</p>
                    @if (User.IsInRole("BuildingAdd"))
                    {
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <a asp-controller="Building" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success mb-2">
                                    <i class="fas fa-plus-square"></i>
                                    Add
                                </a>
                            </div>
                        </div>
                    }
                    <table class="table table-centered mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Country</th>
                                <th>State</th>
                                <th>City</th>
                                <th>Street</th>
                                <th>Building Number</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @{ var count = 0; }
                            @foreach (var building in Model.Buildings)
                            {
                                count++;
                                <tr>
                                    <td scope="row">@count</td>
                                    <td>@building.Country</td>
                                    <td>@building.State</td>
                                    <td>@building.City</td>
                                    <td>@building.Street</td>
                                    <td>@building.BuildingNumber</td>
                                    <td>
                                        @if (User.IsInRole("BuildingDetails"))
                                        {
                                            <a asp-controller="Building" asp-action="Details" asp-route-id="@building.Id" class="btn btn-link text-info" data-toggle="tooltip" data-placement="top" title="Details">
                                                <i class="fas fa-info"></i>
                                            </a>
                                        }
                                        @if (User.IsInRole("BuildingEdit"))
                                        {
                                            <a asp-controller="Building" asp-action="Edit" asp-route-id="@building.Id" class="btn btn-link text-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (User.IsInRole("BuildingDelete"))
                                        {
                                            <a asp-controller="Building" asp-action="Delete" asp-route-buildingmanagerid="@building.BuildingManagerId" asp-route-buildingid="@building.Id" class="btn btn-link text-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a asp-controller="Dashboard" asp-action="Index" class="navbar-brand">
            <i class="fas fa-tachometer-alt"></i>
            Dashboard
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (User.IsInRole("BuildingManagerList"))
                {
                    <li class="nav-item">
                        <a asp-controller="BuildingManager" asp-action="List" class="nav-link">
                            <i class="fas fa-house-user"></i>
                            Building Managers
                        </a>
                    </li>
                }
                @if (User.IsInRole("BuildingList"))
                {
                    <li class="nav-item">
                        <a asp-controller="Building" asp-action="List" class="nav-link">
                            <i class="fas fa-city"></i>
                            Buildings
                        </a>
                    </li>
                }
                @if (User.IsInRole("UserList"))
                {
                    <li class="nav-item">
                        <a asp-controller="User" asp-action="List" class="nav-link">
                            <i class="fas fa-users"></i>
                            Users
                        </a>
                    </li>
                }
                @if (User.IsInRole("DeviceList"))
                {
                    <li class="nav-item">
                        <a asp-controller="Device" asp-action="List" class="nav-link">
                            <i class="fas fa-mobile"></i>
                            Devices
                        </a>
                    </li>
                }
            </ul>
            <div class="my-2 my-lg-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i>
                            User
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            @if (User.IsInRole("UserProfile"))
                            {
                                <a asp-controller="User" asp-action="Profile" class="dropdown-item">
                                    <i class="fas fa-id-card"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                            }
                            <a asp-controller="Account" asp-action="Logout" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i>
                                Log out
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
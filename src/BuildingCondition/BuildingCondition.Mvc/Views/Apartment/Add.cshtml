@model BuildingCondition.Db.Models.Apartment

@{
    ViewData["Title"] = "Add";
}

@await Html.PartialAsync("_LayoutHeader")

<section class="mt-5 d-flex justify-content-center align-items-center text-center">
    <form asp-controller="Apartment" asp-action="Add" method="post">
        <h1 class="h3 mb-3 font-weight-normal">New apartment</h1>
        <input type="hidden" asp-for="BuildingId" />
        <div class="form-group">
            <input asp-for="ApartmentNumber" type="text" class="form-control" placeholder="Apartment number">
        </div>
        <div class="form-group">
            <input asp-for="GateNumber" type="text" class="form-control" placeholder="Gate number">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Add</button>
    </form>
</section>
@model BuildingCondition.Db.Models.Apartment

@{
    ViewData["Title"] = "Details";
}

@await Html.PartialAsync("_LayoutHeader")

<section>
    <div class="row mx-1 my-1">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p>@Model.Building.BuildingManager.Name</p>
                    <p> @Model.Building.Country @Model.Building.State @Model.Building.City @Model.Building.Street @Model.Building.BuildingNumber / @Model.ApartmentNumber</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mx-1 my-1">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <p>Electrical instalation report</p>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <a asp-controller="Apartment" asp-action="AddElectricalReport" class="btn btn-success mb-2">
                                <i class="fas fa-plus-square"></i>
                                Add
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <p>Gas instalation report</p>
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <a asp-controller="Apartment" asp-action="AddGasReport" asp-route-id="@Model.Id" class="btn btn-success mb-2">
                                <i class="fas fa-plus-square"></i>
                                Add
                            </a>
                        </div>
                    </div>
                    <table class="table table-centered mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Status</th>
                                <th>Date of inspection</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                var count = 0;
                                var status = "";
                            }
                            @foreach (var apartmentGasInstalationReport in Model.ApartmentGasInstalationReports)
                            {
                                if (apartmentGasInstalationReport.FurtherOperationOfTheInstallationInThePremises) { status = "Admitted"; }
                                else { status = "Not admitted"; }
                                count++;
                                <tr>
                                    <td scope="row">@count</td>
                                    <td>@status</td>
                                    <td>@apartmentGasInstalationReport.DateOfInspection</td>
                                    <td>
                                        <a asp-controller="Apartment" asp-action="Details" asp-route-id="@apartmentGasInstalationReport.Id" class="btn btn-link text-info" data-toggle="tooltip" data-placement="top" title="Details">
                                            <i class="fas fa-info"></i>
                                        </a>
                                        <a asp-controller="Apartment" asp-action="Edit" asp-route-id="@apartmentGasInstalationReport.Id" class="btn btn-link text-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Apartment" asp-action="Delete" asp-route-id="@apartmentGasInstalationReport.Id" class="btn btn-link text-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>